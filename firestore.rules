rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read: if true;   // ðŸ‘ˆ allow client to load lawyers
      allow write: if request.auth != null;
    }

    match /appointments/{appointmentId} {
      allow read, write: if true;
    }
  }
}
